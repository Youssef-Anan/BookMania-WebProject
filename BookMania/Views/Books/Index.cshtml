

@model IEnumerable<BookMania.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>





<div class="row">
    

    </>
    
    
    <!-- Sidebar -->
    <div class="col-md-3 sidebar">
        <div class="sidebar-box">
        <h2>Book type </h2>
        <!-- Sidebar Buttons for Different Types -->
        <div class="form-check mb-2">
            <input class="form-check-input type-checkbox" type="checkbox" id="showAllCheckbox" data-type="all">
            <label class="form-check-label" for="showAllCheckbox">
                Show All
            </label>
        </div>
        <div class="form-check mb-2">
            <input class="form-check-input type-checkbox" type="checkbox" id="hideAllCheckbox" data-type="none">
            <label class="form-check-label" for="hideAllCheckbox">
                Hide All
            </label>
        </div>

        <div class="form-check mb-2">
            <input class="form-check-input type-checkbox" type="checkbox" id="novelCheckbox" data-type="Novel">
            <label class="form-check-label" for="novelCheckbox">
                Novel
            </label>
        </div>
        <div class="form-check mb-2">
            <input class="form-check-input type-checkbox" type="checkbox" id="comicsCheckbox" data-type="Comics">
            <label class="form-check-label" for="comicsCheckbox">
                Comics
            </label>
        </div>
        <div class="form-check mb-2">
            <input class="form-check-input type-checkbox" type="checkbox" id="educationalCheckbox" data-type="Educational">
            <label class="form-check-label" for="educationalCheckbox">
                Educational
            </label>
        </div>

        <div class="form-check mb-2">
            <input class="form-check-input type-checkbox" type="checkbox" id="historical.Checkbox" data-type="Historical">
            <label class="form-check-label" for="historicalCheckbox">
                Historical
            </label>
        </div>
            <div class="form-check mb-2">
                <input class="form-check-input type-checkbox" type="checkbox" id="scientificCheckbox" data-type="Scientific">
                <label class="form-check-label" for="scientificCheckbox">
                    Scientific
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input type-checkbox" type="checkbox" id="geographyCheckbox" data-type="Geography">
                <label class="form-check-label" for="geographyCheckbox">
                    Geography
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input type-checkbox" type="checkbox" id="AutobiographyCheckbox" data-type="Autobiography">
                <label class="form-check-label" for="AutobiographyCheckbox">
                    Autobiography
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input type-checkbox" type="checkbox" id="DocumentationalCheckbox" data-type="Documentational">
                <label class="form-check-label" for="DocumentationalCheckbox">
                    Documentational
                </label>
            </div>
    </div>
    
        
    </div>

    <!-- Main Content -->
    <div class="col-md-9 content">
        <h2>Books</h2>

        <!-- Main Content About Books -->
        <p>Welcome to our bookstore! Explore our collection of books across various types.</p>

        @foreach (var item in Model)
        {
          
            <a asp-action="Details" asp-route-id="@item.Id" class="custombook" data-type="@item.Type">
                <div class="m-2" style="display: inline-block;">
                    <figure>
                        @if (item.Type == "Novel")
                        {
                            <img src="uploads/bookcover.jpeg" alt="Book Cover" height="200" width="150">
                        }
                        else if(item.Type=="Comics")
                        {
                            <img src="uploads/comiccover.jpg" alt="Book Cover" height="200" width="150">
                        }
                        else if (item.Type == "Educational")
                        {
                            <img src="uploads/educational.jpg" alt="Book Cover" height="200" width="150">
                        }
                        else if (item.Type == "Historical")
                        {
                            <img src="uploads/historical.jpg" alt="Book Cover" height="200" width="150">
                        }
                        else if (item.Type == "Scientific")
                        {
                            <img src="uploads/scientific.jpg" alt="Book Cover" height="200" width="150">
                        }
                        else if (item.Type == "Geography")
                        {
                            <img src="uploads/geography.jpg" alt="Book Cover" height="200" width="150">
                        }
                        else if (item.Type == "Autobiography")
                        {
                            <img src="uploads/autobiography.jpg" alt="Book Cover" height="200" width="150">
                        }
                        else if (item.Type == "Documentational")
                        {
                            <img src="uploads/documentational.jpg" alt="Book Cover" height="200" width="150">
                        }
                    </figure>
                    <div>
                        <h6><strong>@Html.DisplayFor(modelItem => item.Title)</strong></h6>
                        <small>@Html.DisplayFor(modelItem => item.Author_Name)</small>
                        <h6>@Html.DisplayFor(modelItem => item.Price)$</h6>
                    </div>
                </div>
            </a>
            
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>







